entrypoint = "README.md"
modules = ["nodejs-22", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["file", "imagemagick"]

[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npm run expo:static:build && npm run server:build"]
run = ["npm", "run", "server:prod"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081

[[ports]]
localPort = 8082

[env]
PORT = "5000"

[agent]
stack = "EXPO"
integrations = ["resend:1.0.0", "javascript_openrouter_ai_integrations:2.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start App"

[[workflows.workflow]]
name = "Start App"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run server:dev"
waitForPort = 5000

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/start-expo.sh"

[userenv]

[userenv.shared]
WALLET_ENCRYPTION_KEY = "4865e88a0501d04f116ccc6d7321fa48353c15067b6ab5e2accf0b52702156ae"
EXPO_PUBLIC_PRIVY_APP_ID = "${PRIVY_APP_ID}"
EXPO_PUBLIC_PRIVY_CLIENT_ID = "${PRIVY_CLIENT_ID_MOBILE}"
